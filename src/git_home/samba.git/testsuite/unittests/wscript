#!/usr/bin/env python

import os

def configure(conf):
    pkg_name = 'cmocka'
    pkg_minversion = '1.0'

    conf.CHECK_BUNDLED_SYSTEM_PKG(pkg_name, minversion=pkg_minversion)

def build(bld):
    if bld.CONFIG_SET('HAVE_CMOCKA'):
        bld.SAMBA_BINARY('test_krb5samba',
                         source='test_krb5_samba.c',
                         deps='krb5samba cmocka',
                         install=False)
